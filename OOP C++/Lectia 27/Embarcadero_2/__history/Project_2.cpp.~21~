{
	Form2->Label1->Caption = IntToStr(this->STEP);

	Form2->Show();
}
//---------------------------------------------------------------------------

void __fastcall TForm1::Edit2Click(TObject *Sender)
{
	  Form2->ShowModal();
}
//---------------------------------------------------------------------------


void __fastcall TForm1::Button1Click(TObject *Sender)
{
	Form1->STEP++;

	xxx->Caption = "NR:: " + IntToStr( STEP );
}
